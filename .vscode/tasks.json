{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet build /property:GenerateFullPaths=true /consoleloggerparameters:NoSummary",
            "type": "shell",
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "rebuild",
            "command": "dotnet clean; dotnet build /property:GenerateFullPaths=true /consoleloggerparameters:NoSummary",
            "type": "shell",
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test",
            "command": "dotnet test",
            "type": "shell",
            "group": "test",
        },
    ]
}